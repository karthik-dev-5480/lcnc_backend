package com.lcncbe.controller;

import org.springframework.web.bind.annotation.*;

import com.lcncbe.dto.PageRequest;

import org.springframework.http.ResponseEntity;
import java.util.Map;


@RestController
@RequestMapping("/api/pages")
public class PageController {

    @PostMapping
    public ResponseEntity<?> createPage(@RequestBody PageRequest request) {
        // Log the creation for debugging
        System.out.println("Received request to create: " + request.getType() + " with name: " + request.getName());

        // Logic to save to database (e.g., PostgreSQL/MongoDB) would go here
        
        return ResponseEntity.ok(Map.of(
            "message", request.getType() + " created successfully",
            "receivedData", request
        ));
    }
}
