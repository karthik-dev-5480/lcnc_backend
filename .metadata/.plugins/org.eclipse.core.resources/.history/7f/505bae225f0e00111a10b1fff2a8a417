package com.lcncbe.service;

import java.util.List;
import java.util.Map;

import com.lcncbe.model.Dataset;
import com.lcncbe.model.DatasetColumn;
import com.lcncbe.model.DatasetCondition;
import com.lcncbe.model.DatasetJoin;
import com.lcncbe.model.DatasetParameter;
import com.lcncbe.model.DatasetTable;

public interface DatasetService {

	Dataset saveDataset(Dataset ds);
    void deleteDataset(Long id);
    
    DatasetTable saveTable(DatasetTable table);
    void deleteTable(Long id);
    
    DatasetColumn saveColumn(DatasetColumn col);
    void deleteColumn(Long id);
    
    DatasetJoin saveJoin(DatasetJoin join);
    void deleteJoin(Long id);
    
    DatasetCondition saveCondition(DatasetCondition cond);
    void deleteCondition(Long id);
    
    DatasetParameter saveParameter(DatasetParameter param);
    void deleteParameter(Long id);

    // Query Execution Engine
    List<Map<String, Object>> executeQuery(Long datasetId, Map<String, Object> runtimeParams);
	
	

}
