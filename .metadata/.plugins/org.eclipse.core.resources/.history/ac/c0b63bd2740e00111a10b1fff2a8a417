package com.lcncbe.model;


import jakarta.persistence.*;
import lombok.Data;

@Data
@Entity
@Table(name = "meta_dataset_columns")
public class DatasetColumn {
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @ManyToOne
    @JoinColumn(name = "dataset_id")
    private Dataset dataset;

    @ManyToOne
    @JoinColumn(name = "dataset_table_id")
    private DatasetTable datasetTable;

    @ManyToOne
    @JoinColumn(name = "column_id")
    private DataColumn dataColumn;

    private String columnAlias; // Optional alias for the output grid

	public Long getId() {
		return id;
	}

	public void setId(Long id) {
		this.id = id;
	}

	public Dataset getDataset() {
		return dataset;
	}

	public void setDataset(Dataset dataset) {
		this.dataset = dataset;
	}

	public DatasetTable getDatasetTable() {
		return datasetTable;
	}

	public void setDatasetTable(DatasetTable datasetTable) {
		this.datasetTable = datasetTable;
	}

	public DataColumn getDataColumn() {
		return dataColumn;
	}

	public void setDataColumn(DataColumn dataColumn) {
		this.dataColumn = dataColumn;
	}

	public String getColumnAlias() {
		return columnAlias;
	}

	public void setColumnAlias(String columnAlias) {
		this.columnAlias = columnAlias;
	}
    
}